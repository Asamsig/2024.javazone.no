---
import ButtonLink from "../ButtonLink.astro";
import {Image} from "astro:assets";

type AstroProps = {
    title: string;
    subtitle: string;
    content: string;
    imgSrc: string;
    imgAlt: string;
    participant: string;
    age: string;
    equipment: string;
}

const {title, subtitle, content, imgSrc, imgAlt, participant, age, equipment} = Astro.props as AstroProps;
---

<div class="max-w-sm rounded overflow-hidden shadow-lg flex flex-col min-h-[50rem] relative border-8 border-black p-1">
    <div class="border-8 border-white rounded overflow-hidden flex flex-col w-full h-full">
        <div class="absolute top-0 left-0 px-6 py-8 bg-black h-32">
            <h2 class="font-bold text-xl mb-2 text-white">{title}</h2>
        </div>
        <Image class="w-72 h-72 mx-auto mt-40 object-fill"
               src={imgSrc}
               alt={imgAlt}
               width="1" height="1"/>
        <div class="flex items-center justify-center mt-4">
            <h3 class="font-bold text-xl mb-2">{subtitle}</h3>
        </div>
        <div class="px-6 py-4">
            <p class="text-gray-700 text-base">
                {content}
            </p>
        </div>
        <div class="px-6 pt-4 pb-2 flex-grow min-h-[50px]">
            <ul class="w-auto ml-4 text-[1rem]">
                <li><span class="font-bold">Alder:</span> {age}</li>
                <li><span class="font-bold">Deltakere:</span> {participant}</li>
                <li class="flex items-start">
                    <span class="font-bold">Utstyr:</span>
                    <div class="ml-2">{equipment}</div>
                </li>
            </ul>
        </div>
        <div class="px-6 pt-4 pb-2 mt-auto mx-auto flex gap-10">
            <ButtonLink target="_blank" href="https://moosehead.javazone.no/#/register/kidstom">PÃ¥melding</ButtonLink>
        </div>
    </div>
</div>

