---
import Header from '../components/Header.astro';
interface Props {
    title: string;
}

const {title} = Astro.props;
import "public/styles/base.css"
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Astro description"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<body>
<a href="#main-content" class="skiplink">Skip to main content</a>
<Header/>
<main id="main-content">
    <div class="min-h-screen flex flex-col justify-between items-stretch">
        <div class="flex items-center grow shrink-0 py-12 !px-6 md:!px-12 ">
            <div class="relative grow shrink w-auto my-0 w-full lg:max-w-[960px] mx-auto">
                <slot/>
            </div>
        </div>
    </div>
    <a href="#main-content">Go to the top</a>
</main>
</body>
</html>

<style>
    .skiplink {
        @apply absolute left-[-2000px] top-0
    }

    .skiplink:hover {
        @apply left-0
    }

    body {
        cursor: url('../../public/images/JavaZone2024-arrow.gif'), auto;
    }
</style>
